{% extends ':base:application.html.twig' %}
{% block main %}
    <div id="div-sale-sortable" class="div-sortable">
        <div class="header">
            <div class="div-input">
                <input type="text" size="20" maxlength="40" autofocus="autofocus" placeholder="Wyszukaj wystawienie" class="input-search" value="{{ sortableParameters['search'] }}">
            </div>
            <div class="div-limit">
                <span>Liczba rekord√≥w na stronie:</span>
                <select class="select-limit">
                    {% for limit in limitSet %}
                        <option value="{{ limit }}">{{ limit }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="content">
            {% include 'SaleBundle::sortable_content.html.twig' %}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts
    'assets/js/application/sale/index.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}