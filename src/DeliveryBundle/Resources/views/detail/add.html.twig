{% extends ':base:application.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
{% block main %}
    <h1 class="h-enum">1. Wybierz towar lub dodaj nowy</h1>
    <div id="searchable-good" class="searchable">
        <input type="text" placeholder="Wyszukaj towar">
        <div>
            {% include 'DeliveryBundle:detail:good_searchable_content.html.twig' %}
        </div>
    </div>
    <h1 class="h-enum">2. Wpisz dane nowego towaru</h1>
    <h1 class="h-enum">3. Wybierz indeks lub dodaj nowy</h1>
    <div id="searchable-indexx" class="searchable">
        <input type="text" placeholder="Wyszukaj indeks">
        <div>
            {% include 'DeliveryBundle:detail:indexx_searchable_content.html.twig' %}
        </div>
    </div>
    <h1 class="h-enum">4. Wpisz dane nowego indeksu</h1>
    <h1 class="h-enum">5. Uzupełnij dane pozycji przyjęcia</h1>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts
        'assets/js/application/trade.js'
        'assets/js/application/delivery/detail_add.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}