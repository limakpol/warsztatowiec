{% extends ':base:application.html.twig' %}
{% block main %}
    <div id="div-customer-sortable" class="div-sortable">
        <div class="header">
            <div class="div-input">
                <input type="text" size="20" maxlength="40" autofocus="autofocus" placeholder="Wyszukaj klienta" class="input-search" value="{{ sortableParameters['search'] }}">
            </div>
            <div class="div-filters system">
                <button class="customer-btn-filter-system" data-name="supplier">dostawcy towaru</button>
                <button class="customer-btn-filter-system" data-name="recipient">odbiorcy towaru</button>
            </div>
            <div class="div-filters custom">
                {% for groupp in groupps %}
                    <button class="customer-btn-filter-custom" data-id="{{ groupp.id }}">{{ groupp.name }}</button>
                {% endfor %}
            </div>
            <div class="div-limit">
                <span>Liczba rekord√≥w na stronie:</span>
                <select class="select-limit">
                    {% for limit in limitSet %}
                        <option value="{{ limit }}">{{ limit }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="content">
        {% include 'CustomerBundle::sortable_content.html.twig' %}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts
    'assets/js/application/customer/index.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}