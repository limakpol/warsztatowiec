<div class="content">
    <header>
        <i class="fa fa-times" aria-hidden="true"></i>
    </header>
    <main>
        <ul>
            {% for category in categories %}
                <li class="checkable">
                    <i class="fa fa-check" aria-hidden="true"></i>
                    <label data-id="{{ category.id }}">{{ category.name }}</label>
                </li>
            {% endfor %}
            <li class="addable">
                <input type="hidden" id="add-category-path" value="{{ path('warehouse_selectable_add_category') }}">
                <div>
                    <input type="text" maxlength="20">
                </div>
                <button class="btn-square btn-add" data-type="good">
                    <i class="fa fa-plus" aria-hidden="true"></i>
                </button>
            </li>
        </ul>
    </main>
    <footer>
        <button class="btn-save">zapisz<i class="fa fa-floppy-o" aria-hidden="true"></i></button>
    </footer>
</div>