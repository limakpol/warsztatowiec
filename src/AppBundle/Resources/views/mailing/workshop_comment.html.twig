<html>
<head>
<style>
    table {
        border-collapse: collapse;
    }
    tr td:first-child {
        font-weight: bold;
    }
    td {
        border: 1px solid #999;
        padding: 5px;
    }
</style>
</head>
<body>
    <table>
        <tr>
            <td>Data</td>
            <td>{{ date|date }}</td>
        </tr>
        <tr>
            <td>Ścieżka</td>
            <td>{{ path }}</td>
        </tr>
        <tr>
            <td>Uwaga</td>
            <td>{{ comment }}</td>
        </tr>
        <tr>
            <td>Imię i nazwisko</td>
            <td>{{ userName }}</td>
        </tr>
        <tr>
            <td>Nazwa warsztatu</td>
            <td>{{ workshopName }}</td>
        </tr>
        <tr>
            <td>E-mail</td>
            <td>{{ email }}</td>
        </tr>
        <tr>
            <td>Telefon</td>
            <td>{{ phone|phone }}</td>
        </tr>
    </table>
</body>
</html>