<table id="table-workshops">
    <tr>
        <th>Nazwa warsztatu</th>
        <th>Stanowisko</th>
        <th>Typ użytkownika</th>
        <th></th>
    </tr>
    {% for workshop in workshops %}
        <tr>
            <td>{{ workshop[0].name }}</td>
            <td>{{ workshop[1] }}</td>
            <td>{{ workshop[2] }}</td>
            {% if (app.user.currentWorkshop != workshop[0]) %}
                <td>
                    <button class="btn-save switch-workshop" data-id="{{ workshop[0].id }}">zaloguj się<i class="fa fa-sign-in" aria-hidden="true"></i></button>
                </td>
            {% else %}
                <td>
                    <button id="workshop-edit-index" class="btn-next" data-id="{{ workshop[0].id }}">szczegóły<i class="fa fa-info-circle" aria-hidden="true"></i></button>
                </td>
            {% endif %}
        </tr>
    {% endfor %}
</table>
<button id="new-workshop" class="btn-info">Nowy warsztat<i class="fa fa-plus" aria-hidden="true"></i></button>