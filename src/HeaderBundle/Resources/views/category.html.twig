<table class="inputable category">
    <tr class="tr-th">
        <th>Nazwa</th>
        <th colspan="2"></th>
    </tr>
    {% for category in categories %}
        <tr>
            <td>
                <input type="text" maxlength="20" value="{{ category.name }}">
            </td>
            <td>
                <button class="btn-square btn-remove" data-id="{{ category.id }}">
                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                </button>
            </td>
            <td>
                <button class="btn-square btn-edit" data-id="{{ category.id }}">
                    <i class="fa fa-floppy-o" aria-hidden="true"></i>
                </button>
            </td>
        </tr>
    {% endfor %}
    <tr>
        <td>
            <input maxlength="20" type="text">
        </td>
        <td>
            <button class="btn-square btn-add" data-type="good">
                <i class="fa fa-plus" aria-hidden="true"></i>
            </button>
        </td>
        <td></td>
    </tr>
</table>